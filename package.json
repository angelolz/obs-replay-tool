{
    "name": "obs-replay-tool",
    "version": "1.0.0",
    "description": "Nvidia Shadowplay-like overlay that shows OBS Replay Buffer Status with additional features.",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "electron-builder",
        "start": "electron ."
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "active-win": "^8.1.1",
        "obs-websocket-js": "^5.0.3",
        "prettier": "^3.4.2"
    },
    "devDependencies": {
        "electron": "^27.1.2",
        "electron-builder": "^25.1.8"
    },
    "build": {
        "appId": "com.angelolz.obsReplayTool",
        "productName": "OBSReplayTool",
        "directories": {
            "output": "out"
        },
        "files": [
            "src/**/*",
            "node_modules/**/*",
            "package.json",
            "index.js",
            "img/**/*"
        ],
        "extraFiles": [
            "default_config.json",
            "img/**/*"
        ],
        "win": {
            "target": "portable",
            "icon": "./icon.png",
            
        }
    }
}
